static void Main(string[] args)
    {
        string msiFilePath = @"path\to\your\package.msi";
        
        using (Database db = new Database(msiFilePath, DatabaseOpenMode.ReadOnly))
        {
            // Query for the Uninstall command (usually in the Property table)
            string uninstallCommand = db.ExecuteScalar<string>("SELECT `Value` FROM `Property` WHERE `Property` = 'UninstallString'");
            
            if (!string.IsNullOrEmpty(uninstallCommand))
            {
                Console.WriteLine("Uninstall Command: " + uninstallCommand);
            }
            else
            {
                Console.WriteLine("Uninstall command not found.");
            }
        }
    }
